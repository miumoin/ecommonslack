        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <script>
            let App = { domain: window.location.host, base: window.location.origin, api_base: window.location.origin + '/api', shopify_api_key: '{{shopify_api_key}}' };
        </script>
    </head>
    <body>
        <div id="root"></div>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>